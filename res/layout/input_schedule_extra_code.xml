								        android:inputType="numberDecimal" />
								</TableRow>	 
							<!-- End Second Column of Row -->   
							<!-- End Row --> 	       
						 </TableLayout> 	       
					       
				
					    <TextView
					        android:id="@+id/textView55"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="4) Which Day?" />
					    
					    <DatePicker
					        android:id="@+id/input_schedule_datePicker_other"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content" 
					        />	    
					
						<TextView
						    android:layout_width="wrap_content"
						    android:layout_height="match_parent"
						    android:layout_gravity="left"
						    android:text="5) What is the address of the event" />
				
					    <EditText
					        android:id="@+id/input_schedule_edit_text_other_address"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:ems="10"
					        android:inputType="textPostalAddress" />
					
					    <!-- Enter event into calendar -->
				
					    <Button
					        android:id="@+id/input_schedule_button_other_enter_calendar_event"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:text="Create Misc Calendar Event" />
				
					    <TextView
					        android:id="@+id/textView2"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_gravity="center"
					        android:text="-----------------------------------------------------" />	    
					    	
						<TextView
						    android:layout_width="wrap_content"
						    android:layout_height="match_parent"
						    android:layout_gravity="center"
						    android:text="If you get interrupted, just click &apos;Remind Me Later&apos;" />
						
						<!-- Remind me to finish later -->
				
					    <Button
					        android:id="@+id/input_schedule_button_other_remind_me_later"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:text="Remind Me Later" />
				
						</LinearLayout>
						
					 </ScrollView>
    
					</LinearLayout>
				    			    
    
    
</LinearLayout>
