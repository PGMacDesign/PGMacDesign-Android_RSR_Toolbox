<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_view_sql_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name (First Last)" />

    <EditText
        android:id="@+id/edit_text_sql_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_view_sql_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Much You Like them Scale (1-10)" />

    <EditText
        android:id="@+id/edit_text_sql_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />


    <Button
        android:id="@+id/button_sql_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update SQL Database" />

    <Button
        android:id="@+id/button_sql_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View" />

    <TextView
        android:id="@+id/sql_text_view_row_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Row ID Number: " />

    <EditText
        android:id="@+id/sql_edit_text_row_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/sql_button_get_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Information" />

    <Button
        android:id="@+id/sql_button_edit_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Entry" />

    <Button
        android:id="@+id/sql_button_delete_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Entry" />

</LinearLayout>
