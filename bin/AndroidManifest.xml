        <!-- This activity configures the widget -->
        <activity
            android:name=".WidgetConfig"
            android:label="Widget Configuration" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"
                    />
            </intent-filter>
        </activity>        
        
        <!-- This activity draws a simple triangle on a canvas-->
        <activity
            android:name=".GLExample"
            android:label="Draw a Triangle" >
        </activity>          
        
        <!-- This activity draws a simple triangle on a canvas-->
        <activity
            android:name=".Voice"
            android:label="Test The Voice Recognition Software" >
        </activity>
       
        <!-- This activity speaks words back to you via the text to voice features-->
        <activity
            android:name=".TextVoice"
            android:label="Test the text to voice software" >
        </activity>        
        
        <!-- This activity Creates a status bar icon. Useful for a reminder-->
        <activity
            android:name=".StatusBar"
            android:label="Status Bar Icon" >
        </activity>         
        
        <!-- This activity Creates a status bar icon. Useful for a reminder-->
        <activity
            android:name=".SeekBarVolume"
            android:label="Adjust Media Volume" >
        </activity> 
        

                
        
        
        
    </application>

</manifest>
    